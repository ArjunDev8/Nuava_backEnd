model Events {
  id        Int       @id @default(autoincrement())
  title     String
  start     DateTime
  end       DateTime
  allDay    Boolean
  schoolID  Int
  school    School    @relation(fields: [schoolID], references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
}
